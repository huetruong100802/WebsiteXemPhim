@model MovieWebsite.Models.Episodes.EpisodeInputModel

@{
    ViewData["Title"] = "Edit";
    string videoPath = $"~/video/{Model.MovieId}/" + Model.VideoName;
}

<h1>Edit</h1>

<h4>Episode</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="VideoName" type="hidden" class="form-control" />
            <input asp-for="Id" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <video style="width:100%;object-fit:cover" controls>
                <source src="@Url.Content(videoPath)" type="video/mp4" />
            </video>
            <div class="form-group">
                <label asp-for="VideoFile" class="control-label"></label>
                <input asp-for="VideoFile" class="form-control" accept="video/*" />
                <span asp-validation-for="VideoFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="MovieId" class="form-control" value="@Model.MovieId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model?.MovieId">Back to List</a>
</div>

