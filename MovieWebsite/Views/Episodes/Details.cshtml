@model BusinessObject.Models.Episode

@{
    ViewData["Title"] = "Details";
    string videoPath = $"~/video/{Model.MovieId}/" + Model.VideoName;
}

<h1>Details</h1>

<div>
    <h4>Episode</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VideoName)
        </dt>
        <dd class = "col-sm-10">
            <video style="width:50%;object-fit:cover"  controls>
                <source src="@Url.Content(videoPath)" type="video/mp4"/>
            </video>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index" asp-route-id="@Model?.MovieId">Back to List</a>
</div>
